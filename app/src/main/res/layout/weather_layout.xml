<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_background">
<android.support.v7.widget.CardView
    android:layout_width="325dp"
    android:layout_height="220dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="24dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="31dp"
    android:id="@+id/weather_today">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:id="@+id/weather_temp"
    android:layout_width="90dp"
    android:layout_height="50dp"
    android:textSize="30dp"
    android:layout_marginLeft="35dp"
    android:layout_marginStart="35dp"
    android:layout_marginTop="30dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"

    />
   <TextView
       android:id="@+id/weather_txt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:textSize="20dp"
       android:layout_alignTop="@+id/weather_temp"
       android:layout_toRightOf="@+id/weather_pop"
       android:layout_toEndOf="@+id/weather_pop" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/weather_temp"
            android:layout_alignStart="@+id/weather_temp"
            android:id="@+id/weather_pop" />
        <TextView
            android:id="@+id/weather_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/weather_pop"
            android:layout_alignLeft="@+id/weather_pop"
            android:layout_alignStart="@+id/weather_pop" />
        <TextView
            android:id="@+id/weather_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/weather_pm25"
            android:layout_toEndOf="@+id/weather_pm25" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/weather_wind"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/weather_wind"
            android:layout_toEndOf="@+id/weather_wind"
            android:id="@+id/comf_txt" />
        <TextView
            android:id="@+id/weather_qlty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/weather_temp"
            android:layout_toRightOf="@+id/weather_txt"
            android:layout_toEndOf="@+id/weather_txt" />

<TextView
    android:id="@+id/weather_pm25"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_below="@+id/weather_qlty"
    android:layout_alignLeft="@+id/weather_qlty"
    android:layout_alignStart="@+id/weather_qlty" />




















    </RelativeLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_below="@+id/weather_today"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="24dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/weather_tomorrow">
<TextView
    android:id="@+id/ceshi"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="24dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_below="@+id/weather_tomorrow"
        android:layout_alignLeft="@+id/weather_tomorrow"
        android:layout_alignStart="@+id/weather_tomorrow"
        android:id="@+id/weather_acquired">

    </android.support.v7.widget.CardView>

</RelativeLayout>